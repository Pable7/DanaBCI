<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Ll_Principal"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/Ll_Muse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">
        <Spinner
            android:id="@+id/muses_spinner"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingBottom="15dp"/>
        <LinearLayout
            android:id="@+id/Ll_Botones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:gravity="center">
            <Button
                android:background="@drawable/all_corners_round"
                android:textColor="#FFF"
                android:id="@+id/refresh"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="@string/refresh"
                android:layout_margin="20px"/>
            <Button
                android:id="@+id/connect"
                android:background="@drawable/all_corners_round"
                android:textColor="#FFF"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="@string/connect"
                android:layout_margin="20px"/>
            <Button
                android:id="@+id/disconnect"
                android:background="@drawable/all_corners_round"
                android:textColor="#FFF"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="@string/disconnect"
                android:layout_margin="20px"/>
        </LinearLayout>
        <TextView
            android:id="@+id/Jbl_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:textSize="16sp"
            android:textColor="#000"
            android:text="@string/status" />
        <TextView
            android:id="@+id/con_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:textSize="16sp"
            android:textColor="#000"
            android:text="@string/undefined" />
        <TextView
            android:id="@+id/Jbl_EEGdata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:textSize="16sp"
            android:textColor="#000"
            android:text="@string/eeg" />
        <LinearLayout
            android:id="@+id/Ll_Lecturas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/eeg_tp9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="#000"
                android:textAlignment="center"
                android:text="@string/init_val" />
            <TextView
                android:id="@+id/eeg_af7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="#000"
                android:textAlignment="center"
                android:text="@string/init_val" />
            <TextView
                android:id="@+id/eeg_af8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="#000"
                android:textAlignment="center"
                android:text="@string/init_val" />
            <TextView
                android:id="@+id/eeg_tp10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="#000"
                android:textAlignment="center"
                android:text="@string/init_val" />
        </LinearLayout>
        <TextView
            android:id="@+id/Jbl_AcelerometroData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Ll_Lecturas"
            android:paddingBottom="15dp"
            android:textSize="16sp"
            android:textColor="#000"
            android:text="@string/accel" />
        <LinearLayout
            android:id="@+id/Ll_LecturasAcelerometro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Jbl_AcelerometroData"
            android:paddingBottom="15dp"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/acc_x"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="#000"
                android:textAlignment="center"
                android:text="@string/init_val" />
            <TextView
                android:id="@+id/acc_y"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="#000"
                android:textAlignment="center"
                android:text="@string/init_val" />
            <TextView
                android:id="@+id/acc_z"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="#000"
                android:textAlignment="center"
                android:text="@string/init_val" />
        </LinearLayout>
        <TextView
            android:id="@+id/Jbl_AlphaData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Ll_LecturasAcelerometro"
            android:paddingBottom="15dp"
            android:textSize="16sp"
            android:textColor="#000"
            android:text="@string/muse_elem" />
        <LinearLayout
            android:id="@+id/Ll_LecturasAlpha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Jbl_AlphaData"
            android:paddingBottom="15dp"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/elem1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="#000"
                android:textAlignment="center"
                android:text="@string/init_val" />
            <TextView
                android:id="@+id/elem2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="#000"
                android:textAlignment="center"
                android:text="@string/init_val" />
            <TextView
                android:id="@+id/elem3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="#000"
                android:textAlignment="center"
                android:text="@string/init_val" />
            <TextView
                android:id="@+id/elem4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="#000"
                android:textAlignment="center"
                android:text="@string/init_val" />
        </LinearLayout>
        <TextView
            android:id="@+id/Jbl_Version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Ll_LecturasAlpha"
            android:paddingBottom="15dp"
            android:textSize="16sp"
            android:textColor="#000"
            android:text="@string/version" />
        <TextView
            android:id="@+id/version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Jbl_Version"
            android:paddingBottom="15dp"
            android:textSize="16sp"
            android:textColor="#000"
            android:text="@string/undefined" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_below="@+id/version"
            android:layout_marginTop="15dp"
            android:gravity="center">
            <Button
                android:background="@drawable/all_corners_round"
                android:textColor="#FFF"
                android:id="@+id/pause"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="@string/pause" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>