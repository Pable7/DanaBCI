<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/Ll_Principal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:text="@string/dispositivos"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/muses_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15sp"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:paddingBottom="15sp"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="4"
            android:columnCount="2"
            android:orientation="vertical"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp">

            <TextView
                android:text="@string/status"
                android:textColor="@color/colorNegro"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/con_status"
                android:text="@string/undefined"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:textAlignment="center"
                android:paddingBottom="10sp"/>

            <Button
                android:id="@+id/connect"
                android:text="@string/connect"
                android:layout_columnWeight="1"
                android:layout_marginTop="5sp"
                android:layout_marginStart="15sp"
                android:background="@drawable/all_corners_round"
                android:textColor="@color/colorBlanco" />

            <Button
                android:id="@+id/disconnect"
                android:text="@string/disconnect"
                android:layout_columnWeight="1"
                android:layout_marginTop="10sp"
                android:layout_marginStart="15sp"
                android:background="@drawable/all_corners_round"
                android:textColor="@color/colorBlanco" />

            <ImageView
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_rowSpan="4"
                android:layout_marginEnd="15sp"
                android:src="@mipmap/muse_headband"
                android:contentDescription="@string/app_name"
                android:scaleType="centerInside"/>

        </GridLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/refresh"
            android:text="@string/refresh"
            android:layout_columnWeight="1"
            android:layout_margin="5sp"
            android:visibility="gone"
            android:background="@drawable/all_corners_round"
            android:textColor="@color/colorBlanco" />

        <TextView
            android:id="@+id/Jbl_EEGdata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="10sp"
            android:layout_marginTop="15sp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textAllCaps="true"
            android:text="@string/eeg" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_marginBottom="20sp"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp" >

            <TextView
                android:id="@+id/eeg_tp9"
                android:text="@string/init_val"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="10sp"
                android:textColor="@color/colorNegro"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/eeg_af7"
                android:text="@string/init_val"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="10sp"
                android:textColor="@color/colorNegro"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/eeg_af8"
                android:text="@string/init_val"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="10sp"
                android:textColor="@color/colorNegro"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/eeg_tp10"
                android:text="@string/init_val"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="10sp"
                android:textColor="@color/colorNegro"
                android:textAlignment="center" />

        </GridLayout>

        <TextView
            android:id="@+id/Jbl_AcelerometroData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="10sp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textAllCaps="true"
            android:text="@string/accel" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="1"
            android:layout_marginBottom="20sp">

            <TextView
                android:id="@+id/acc_x"
                android:text="@string/init_val"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="10sp"
                android:textColor="@color/colorNegro"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/acc_y"
                android:text="@string/init_val"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="10sp"
                android:textColor="@color/colorNegro"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/acc_z"
                android:text="@string/init_val"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="10sp"
                android:textColor="@color/colorNegro"
                android:textAlignment="center" />

        </GridLayout>

        <TextView
            android:id="@+id/Jbl_AlphaData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="10sp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textAllCaps="true"
            android:text="@string/muse_elem" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_marginBottom="20sp">

            <TextView
                android:id="@+id/elem1"
                android:text="@string/init_val"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="10sp"
                android:textColor="@color/colorNegro"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/elem2"
                android:text="@string/init_val"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="10sp"
                android:textColor="@color/colorNegro"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/elem3"
                android:text="@string/init_val"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="10sp"
                android:textColor="@color/colorNegro"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/elem4"
                android:text="@string/init_val"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="10sp"
                android:textColor="@color/colorNegro"
                android:textAlignment="center" />

        </GridLayout>

        <TextView
            android:id="@+id/Jbl_Version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="10sp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textAllCaps="true"
            android:text="@string/version" />

        <TextView
            android:id="@+id/version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="25sp"
            android:textColor="#000"
            android:textAlignment="center"
            android:text="@string/undefined" />

        <Button
            android:id="@+id/pause"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/all_corners_round"
            android:textColor="#FFF"
            android:layout_gravity="center"
            android:text="@string/pause" />

    </LinearLayout>

</ScrollView>